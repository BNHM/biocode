    my $name="";
    my $taxteam="";
    my $dates = "ifnull(e.yearcollected,0), ifnull(e.monthcollected,0), ifnull(e.daycollected,0)";

    push (@TaxTeams,"IRLA");
    $taxteam = $input{taxteam};

    if ($input{json} ne "true" && $input{jsonabbr} ne "true") {
        print "Queries grouped by TaxTeam & Event Date:<br>";
