        print "Queries grouped by TaxTeam & Number Events/Photos:<br>";
        print "<form method=GET>\n";
        print "<select name='taxteam'>\n";
        print "<option value='ALL BIOCODE'>ALL BIOCODE</option>";

        foreach $tt (@TaxTeams) {
            print "<option value='". $tt. "' ";
            if ($tt eq $taxteam) {
                print " SELECTED";
