            print ">$tt</option>\n";
        }
        print "</select>\n";
	
        @queries= qw(specimens/event photos/specimen);
        foreach $q (@queries) {
            print "<input type=radio name=query value=\"$q\" ";
            if ($q eq $input{query}) {
