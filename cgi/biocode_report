        foreach $tt (@TaxTeams) {
            print "<option value='". $tt. "' ";
            if ($tt eq $taxteam) {
                print " SELECTED";
            }
            print ">$tt</option>\n";
        }
        print "</select>\n";
        @queries = qw(taxa);

        foreach $q (@queries) {
            print "<input type=radio name=query value=$q ";
            if ($q eq 'taxa') {
                print " checked";
            }
